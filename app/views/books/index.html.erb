<h1>Books</h1>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </tr>

  <% @books.each do |book| %>
   <tr>
    <span><th><%= book.title %></th></span>
    <span><th><%= book.body %></th></span>
    <th><%= link_to "show","/books/#{book.id}" %></th>
    <th><%= link_to "Edit",edit_book_path(book.id)  %></th>
    <th><%= link_to "Destroy",book_path(book),method: :delete %></th>
  </tr>

 <% end %>
 </thead>
</table>
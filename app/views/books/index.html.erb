<h1>Books</h1>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </tr>
 </thead>

<% @books.each do |book| %>
 <tbody>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <th><%= link_to "show", "/books/#{book.id}" %></th>
    <th><%= link_to "Edit", edit_book_path(book.id)  %></th>
    <th><%= link_to "Destroy", book_path(book),method: :delete,data: {confirm: 'Are you sure?'} %></th>
    <% end %>
  </tr>
 </tbody>
</table>

<%= form_for(@book) do |f| %>
<h2>New book</h2>
<% @book.errors.full_messages.each do |message| %>
 <div class="form-error">
  <%= message %>
 </div>
<% end %>
<h4>Title</h4>
 <%= f.text_field :title %>
<h4>Body</h4>
 <%= f.text_field :body %>
<p><%= f.submit %></p>
<% end %>
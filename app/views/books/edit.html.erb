<h1>Editing Book</h1>
<% if flash[:notice] %>
    <p id="notice">
     <%= flash[:notice] %>
    </p>
<% end %>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <p><%= f.submit 'Update Book' %></p>

<% end %>

<%= link_to "Show",book_path %>
<%= link_to "Back",books_path %>